<%- include('../partials/head-logueado') %> 
<!-- Begin page content -->
<main class="flex-shrink-0">
<div class="container">
  <div class="float-end">
    <form action="/posts/<%= post.id %>/delete" method="POST">
      <button type="submit" class="btn btn-danger">Borrar</button>
    </form>
    <a class="btn btn-primary" href="/posts/<%= post.id %>/edit">Editar</a>
  </div>
  <h1 class="mt-5">Detalle de post</h1>
  <hr>
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-6">
        <img src="<%= post.image %>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-6">
        <div class="card-body">
          <p><%= post.content %></p>
          <p><b>Comentarios:</b></p>
              <% comments.forEach(comment => { %>
                <i><a href="/users/detalle/<%= comment.user_id %>"><%= comment.user_id %></i></a> - <%= comment.content %><br>
              <% }) %>
        </div>
      </div>
    </div>
  </div>
  
  
</div>
</main>
<%- include('../partials/footer') %> 
