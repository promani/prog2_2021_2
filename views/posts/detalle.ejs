<%- include('../partials/head') %> 
<!-- Begin page content -->
<main class="flex-shrink-0">
<div class="container">
  <div class="float-end">
    <form action="/posts/<%= post.id %>/delete" method="POST">
      <button type="submit" class="btn btn-danger">Borrar</button>
    </form>
    <a class="btn btn-primary" href="/posts/<%= post.id %>/edit">Editar</a>
  </div>
  <h1 class="mt-5">Detalle de post</h1>
  <hr>
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-6">
        <img src="<%= post.image %>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-6">
        <div class="card-body">
          <p><a href="/users/detalle/<%= post.author.id %>"><%= post.author.name %> <%= post.author.surname %></a></p>
          <p><%= post.content %></p>
          <p><b>Comentarios:</b></p>
              <% post.comments.forEach(comment => { %>
                <a href="/users/detalle/<%= comment.author.id %>"><%= comment.author.name %> <%= comment.author.surname %></a> - <%= comment.content %><br>
              <% }) %>
          <% if (app.user) { %> 
            <form method="POST">
              <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" name="content" id="content"></textarea>
                <label for="floatingTextarea">Contenido</label>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          <% } %> 
        </div>
      </div>
    </div>
  </div>
  
  
</div>
</main>
<%- include('../partials/footer') %> 
