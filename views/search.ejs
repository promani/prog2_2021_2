<%- include('./partials/head') %> 
<!-- Begin page content -->
<main class="feed">
  <form action='/search'>
    <div class="row">
      <div class="col-10">
        <div class="mb-3">
          <input type="text" class="form-control" name="criteria" id="criteria" placeholder="Buscar" value="<%= criteria %>">
        </div>
      </div>
      <div class="col-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
  <% if (posts.length == 0) { %>
    <div class="alert alert-danger" role="alert">
      Lo sentimos, no hemos encontrado resultados para <%= criteria %> .
    </div>
  <% } else { %>
    <% posts.forEach(post => { %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <a href="/posts/<%= post.id %>"><img src="<%= post.image %>" class="img-cover rounded-start" alt="..."></a>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <p><a href="/users/<%= post.user_id %>"><%= post.user_id %></a></p>
              <p></p>
              <p><%= post.content %></p>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>
</main>
<%- include('./partials/footer') %> 

