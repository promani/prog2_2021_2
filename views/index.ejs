<%- include('./partials/head') %> 
<!-- Begin page content -->
<main class="feed">
  <% posts.forEach(post => { %>
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <a href="/posts/<%= post.id %>"><img src="<%= post.image %>" class="img-cover rounded-start" alt="..."></a>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <p><a href="/users/detalle/<%= post.author.id %>"><%= post.author.name %> <%= post.author.surname %></a></p>
            <p></p>
            <p><%= post.content %></p>
            <p><b>Comentarios:</b></p>
              <% post.comments.forEach(comment => { %>
                <a href="/users/detalle/<%= comment.author.id %>"><%= comment.author.name %> <%= comment.author.surname %></a> - <%= comment.content %><br>
              <% }) %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</main>
<%- include('./partials/footer') %> 

